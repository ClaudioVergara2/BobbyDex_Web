---
import "../styles/global.css";

const generations = [
  { id: 1, name: "Generación I", region: "Kanto", color: "from-red-500 to-red-700" },
  { id: 2, name: "Generación II", region: "Johto", color: "from-yellow-500 to-yellow-700" },
  { id: 3, name: "Generación III", region: "Hoenn", color: "from-green-500 to-green-700" },
  { id: 4, name: "Generación IV", region: "Sinnoh", color: "from-blue-500 to-blue-700" },
  { id: 5, name: "Generación V", region: "Unova", color: "from-purple-500 to-purple-700" },
  { id: 6, name: "Generación VI", region: "Kalos", color: "from-pink-500 to-pink-700" },
  { id: 7, name: "Generación VII", region: "Alola", color: "from-orange-500 to-orange-700" },
  { id: 8, name: "Generación VIII", region: "Galar", color: "from-indigo-500 to-indigo-700" },
  { id: 9, name: "Generación IX", region: "Paldea", color: "from-teal-500 to-teal-700" }
];
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Pokémon Wiki — Generaciones</title>
  </head>

  <body class="bg-gray-900 text-white min-h-screen">
    <nav class="bg-gray-800 p-4 shadow mb-8">
      <h1 class="text-3xl font-bold text-center">BOBBYDEX</h1>
    </nav>

    <main class="max-w-6xl mx-auto p-6">
      <h2 class="text-4xl font-bold text-center mb-10">Generaciones</h2>

      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
        {generations.map(gen => (
          <a 
            href={`/generation/${gen.id}`}
            class={`bg-linear-to-b ${gen.color} p-6 rounded-xl shadow-lg hover:scale-105 transition block`}
          >
            <h3 class="text-2xl font-bold mb-2">{gen.name}</h3>
            <p class="text-lg opacity-90">{gen.region}</p>
          </a>
        ))}
      </div>
    </main>
  </body>
</html>