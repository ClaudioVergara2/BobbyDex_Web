---
import "../styles/global.css";

const generations = [
  { id: 1, region: "Kanto", color: "from-red-500 to-red-700" },
  { id: 2, region: "Johto", color: "from-yellow-500 to-yellow-700" },
  { id: 3, region: "Hoenn", color: "from-green-500 to-green-700" },
  { id: 4, region: "Sinnoh", color: "from-blue-500 to-blue-700" },
  { id: 5, region: "Unova", color: "from-purple-500 to-purple-700" },
  { id: 6, region: "Kalos", color: "from-pink-500 to-pink-700" },
  { id: 7, region: "Alola", color: "from-orange-500 to-orange-700" },
  { id: 8, region: "Galar", color: "from-indigo-500 to-indigo-700" },
  { id: 9, region: "Paldea", color: "from-teal-500 to-teal-700" }
];
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>BobbyDex - Regiones</title>
  </head>
  <body class="bg-black text-white min-h-screen">
    <main class="max-w-xl mx-auto mt-10 bg-red-600 rounded-3xl shadow-2xl border-4 border-red-800 p-6 relative">
      <div class="pokedex-led"></div>
      <div class="pokedex-left-btn"></div>
      <div class="pokedex-right-btn"></div>
      <div class="bg-gray-900 p-5 rounded-xl border-4 border-gray-700">
        <h1 class="text-3xl font-bold text-center text-green-400 mb-6">Regiones</h1>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          {generations.map((gen) => (
            <a 
              href={`/generation/${gen.id}`} 
              class={`bg-linear-to-b ${gen.color} p-6 rounded-xl shadow-lg hover:scale-105 transition block text-center`}
            >
              <h2 class="text-xl font-bold">{gen.region}</h2>
            </a>
          ))}
        </div>
      </div>
      <div class="flex justify-center gap-4 mt-6">
        <button class="pokedex-btn prev-btn">
          <span class="arrow left"></span>
        </button>
        <button class="pokedex-btn home-btn">
          <span class="roof"></span>
          <span class="walls"></span>
        </button>
        <button class="pokedex-btn next-btn">
          <span class="arrow right"></span>
        </button>
      </div>
    </main>
  </body>
</html>